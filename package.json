{
	"name": "kha",
	"displayName": "Kha",
	"description": "Kha support",
	"version": "20.4.0",
	"publisher": "kodetech",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Kha",
		"Haxe"
	],
	"activationEvents": [
		"workspaceContains:khafile.js",
		"onCommand:kha.init",
		"onCommand:kha.compile"
	],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "kha.init",
				"title": "Init Project",
				"category": "Kha"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Kha",
			"properties": {
				"kha.khaPath": {
					"type": "string",
					"default": "",
					"description": "Points to a Kha directory."
				},
				"kha.ffmpeg": {
					"type": "string",
					"default": "",
					"description": "Path to ffmpeg for extended audio and video format support."
				},
				"kha.buildDir": {
					"type": "string",
					"default": "build",
					"description": "Relative path to the Kha build dir for the project."
				}
			}
		},
		"taskDefinitions": [
			{
				"type": "Kha",
				"required": [
					"target"
				],
				"properties": {
					"target": {
						"type": "string",
						"description": "The target to build for."
					}
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kode/vscode-kha"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^7.0.43",
		"eslint": "^4.11.0",
		"typescript": "^2.6.1",
		"vscode": "^1.1.36"
	},
	"extensionDependencies": [
		"nadako.vshaxe"
	]
}
